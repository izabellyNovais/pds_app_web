@page "/clientes/{Id:int}/excluir"
@rendermode InteractiveServer

@using AppWeb.Models;
@inject ClienteDAO clienteDAO;
@inject NavigationManager Navigation;

<PageTitle>clientes</PageTitle>

<h1 class="text-xl font-semibold text-gray-800 dark:text-gray-100 mb-6">Exclusão de Cliente</h1>

@if (erro != string.Empty)

{
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
        <strong class="font-bold">Erro!</strong>
        <span class="block sm:inline">@erro</span>
    </div>
}


<EditForm Model="cliente" OnSubmit="Excluir">
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
        <strong class="font-bold">Atenção!</strong>
        <span class="block sm:inline">Esta ação não pode ser desfeita.</span>


        <p class="text-lg">Tem certeza que deseja excluir o cliente <strong>@cliente.Nome</strong>?</p>
    </div>


    <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded mt-2">Excluir</button>
    <a href="/clientes" class="bg-gray-500 text-white px-4 py-2 rounded mt-2">Cancelar</a>

</EditForm>

@code {

    private string erro = string.Empty;



    [Parameter]

    public int Id { get; set; }

    [SupplyParameterFromForm]

    private Cliente cliente { get; set; } = new();

    protected override void OnInitialized()
    {

        var _cliente = clienteDAO.BuscarPorId(Id);

        if (_cliente != null)
        {
            cliente = _cliente;
        }

        else
        {

            erro = "Cliente não encontrado.";

        }

    }



    private void Excluir()

    {

        try

        {

            clienteDAO.Excluir(cliente.Id);



            Navigation.NavigateTo("/cliente/consulta");

        }

        catch (Exception ex)

        {

            erro = $"Erro ao excluir o cliente: {ex.Message}";

        }



    }
}